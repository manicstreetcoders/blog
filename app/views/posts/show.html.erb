<%- model_class = @post.class -%>

<p id="notice"><%= notice %></p>

<p>
  <i class="icon-user"></i> <%= @post.name %>
</p>

<p>
  <b><%= @post.title %></b>
</p>

<p>
  <%= @post.content %>
</p>

<%= render @post.comments.order('id ASC') %>

<h4>Add a comment:</h4>
<%= render "comments/form" %>

<div class="form-actions">
  <%= link_to t('.back', :default => "bk"),
              posts_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => "ed"),
              edit_post_path(@post), :class => 'btn' %>
  <%= link_to t('.destroy', :default => "rm"),
              post_path(@post),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
